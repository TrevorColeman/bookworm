<h2 {{action 'jangle'}}>{{buttonLabel}}</h2>

<form {{action 'submit' on='submit'}}>
    <div class="form-group">
      <label for="">Title</label>
      {{input class="form-control" value=book.title}}
    </div>
    <div class="form-group">
      <label for="">Author</label>
      {{input class="form-control" value=book.author}}
    </div>
    <div class="form-group">
      <label for="">Description</label>
      {{textarea class="form-control" value=book.description}}
    </div>

    <div><button class="btn btn-primary" type="submit">{{buttonLabel}}</button></div>
</form>

<button class="btn btn-danger" {{action 'jangle'}}>DANGER</button>
